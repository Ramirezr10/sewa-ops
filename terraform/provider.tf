terraform {
  required_version = ">= 1.0"
  required_providers {
    google = {
      source  = "hashicorp/google"
      version = "~> 6.0"
    }
  }
}

provider "google" {
  project = var.project_id
  region  = var.region

}

variable "project_id" { description = "GCP Project ID" }
variable "region" { default = "us-central1" }
